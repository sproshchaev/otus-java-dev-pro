<configuration>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %-30logger: %msg%n</pattern>
        </encoder>
    </appender>
</configuration>